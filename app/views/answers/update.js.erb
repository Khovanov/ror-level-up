<% if @answer.errors.present? %>
  $('#edit-answer-errors-<%= @answer.id %>').html("<%= j render 'shared/error', resource: @answer %>");
<% else %> 
  $('#edit-answer-errors-<%= @answer.id %>').empty();   
  <% if remotipart_submitted? %>
      $('#answer-<%= @answer.id %>').replaceWith('<%= j "#{render @answer}" %>');
  <% else %>
      $('#answer-<%= @answer.id %>').replaceWith('<%= j render @answer %>');
  <% end %>
<% end %>
