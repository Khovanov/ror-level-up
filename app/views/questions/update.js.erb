<% if @question.errors.present? %>
  $('.question-errors').html("<%= j render 'shared/error', resource: @question %>");
<% else %>  
  <% if remotipart_submitted? %>
      $('.question').html('<%= j "#{render 'question'}" %>');
  <% else %>
      $('.question').html("<%= j render 'question' %>");
  <% end %>
<% end %>
